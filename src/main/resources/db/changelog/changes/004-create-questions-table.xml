<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="004" author="system">
        <createTable tableName="questions">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="question" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="quick_answer" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="detailed_answer" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="code_example" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="subtopic_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint 
            baseTableName="questions" 
            baseColumnNames="subtopic_id" 
            referencedTableName="subtopics" 
            referencedColumnNames="id"
            constraintName="fk_questions_subtopic"/>

        <addForeignKeyConstraint 
            baseTableName="questions" 
            baseColumnNames="created_by" 
            referencedTableName="users" 
            referencedColumnNames="id"
            constraintName="fk_questions_user"/>

        <createIndex tableName="questions" indexName="idx_questions_subtopic_id">
            <column name="subtopic_id"/>
        </createIndex>

        <createIndex tableName="questions" indexName="idx_questions_created_by">
            <column name="created_by"/>
        </createIndex>
    </changeSet>

</databaseChangeLog> 